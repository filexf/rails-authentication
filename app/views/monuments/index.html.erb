
<div class="container">

  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Monuments" %>

  <h1>Monuments</h1>

  <div class="col" data-controller="insert-in-list">
    <div id="monuments" data-insert-in-list-target="items">
      <% @monuments.each do |monument| %>
        <%= render monument %>
        <p>
          <%= link_to "Show this monument", monument %>
        </p>
      <% end %>
    </div>

    <div data-controller="toggle" class="mt-5">
      <button data-action="click->toggle#fire" class="btn btn-primary mb-3">Add a new monument</button>

      <div data-toggle-target="togglableElement" class="d-none mt-4">
        <%= render "form", monument: @monument %>
      </div>
    </div>


  </div>

</div>
